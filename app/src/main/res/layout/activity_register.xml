<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/newIdInput"
        android:hint="새로운 아이디를 입력해주세요"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/newPasswordInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/newPasswordInput"
        android:layout_centerHorizontal="true"
        android:hint="새로운 비밀번호를 입력해주세요"
        android:layout_below="@+id/newIdInput" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="회원등록"
        android:id="@+id/newUserButton"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/newPasswordInput"
        android:layout_centerHorizontal="true" />

</RelativeLayout>